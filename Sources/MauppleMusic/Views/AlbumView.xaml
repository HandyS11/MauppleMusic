<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MauppleMusic.Views"
             x:Class="MauppleMusic.Views.AlbumView">

    <Grid>
        <ScrollView>
            <VerticalStackLayout Margin="0,0,0,100">
                <views:AlbumDetailView/>
                <views:AlbumSongListView/>
                <views:AlbumDescriptionView Margin="20,15,20,0"/>
            </VerticalStackLayout>
        </ScrollView>

        <views:AlbumPlayingView VerticalOptions="End"/>
        <BoxView BackgroundColor="{StaticResource Gray600}"
                 Opacity="0.3"
                 VerticalOptions="End"
                 HeightRequest="0.5" />
    </Grid>
</ContentView>
