<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MauppleMusic.Views"
             x:Class="MauppleMusic.Views.AlbumView">

    <Grid>
        <ScrollView>
            <VerticalStackLayout>
                <views:AlbumDetailView Image="cover1.png" 
                                       Title="The longest song title I ever test just in case it doesn't fill perfectly"
                                       Author="Some author wellknow"
                                       Theme="The theme"
                                       Year="198x"
                                       Quality="Lossless"/>
                <views:SongListView Date="01 january 1980"
                                    Infos="9 songs, 54 minutes"
                                    Copyright="1999 Some big company"
                                    Margin="15,0,15,85"/>
                
            </VerticalStackLayout>
        </ScrollView>

        <views:AlbumPlayingView VerticalOptions="End"/>
        <BoxView BackgroundColor="{StaticResource Gray600}"
                 Opacity="0.3"
                 VerticalOptions="End"
                 HeightRequest="0.5" />
    </Grid>
</ContentView>
