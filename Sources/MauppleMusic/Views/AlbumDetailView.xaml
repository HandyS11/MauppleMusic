<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauppleMusic.Views.AlbumDetailView">
    
    <VerticalStackLayout HorizontalOptions="Center">

        <toolkit:AvatarView x:Name="albumCover" 
                            Margin="75,10" 
                            WidthRequest="250" HeightRequest="250"
                            ImageSource="cover1.png"
                            CornerRadius="10"/>
        <Label x:Name="albumTitle" 
               Text="Album Title"
               Style="{StaticResource TitleLabel}"/>
        <Label x:Name="albumAuthor"
               Text="Album Author"
               Style="{StaticResource SubTiltleLabel}"/>
        <HorizontalStackLayout HorizontalOptions="Center"
                               Margin="0,5,0,15">
            <HorizontalStackLayout.Resources>
                <Style TargetType="Label">
                    <Setter Property="TextColor" Value="{StaticResource Gray300}"/>
                </Style>
            </HorizontalStackLayout.Resources>
            
            <Label x:Name="albumTheme"
                   Text="Theme"/>
            <Label Text="·"
                   Margin="5,0"/>
            <Label x:Name="albumYear"
                   Text="2000"/>
            <Label Text="·"
                   Margin="5,0"/>
            <Image Source="genetics.png"
                   Aspect="AspectFit" Margin="0,0,3,0"
                   MaximumHeightRequest="15">
            </Image>

            <Label x:Name="albumQuality"
                   Text="Quality"/>
        </HorizontalStackLayout>
        <FlexLayout Direction="Row" HeightRequest="50"
                    AlignItems="Center"
                    JustifyContent="SpaceEvenly">
            <Button Text="Lecture"/>
            <Button Text="Aléatore"/>
        </FlexLayout>
    </VerticalStackLayout>
</ContentView>
